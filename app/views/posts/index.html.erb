<div class = 'users-tab'>
  <h1>All Posts</h1>
  <div>
    <div>
    <div class = 'img-container'>
          <div class="inner-border">
            <img src="<%= @posts.first.author.photo %>" alt="" width="100" height="100">
          </div>
        </div>
      
      <%= link_to @posts.first.author.name, user_path(@posts.first.author) %>
    </div>
    <div class='posts-list'>
    <% @posts.each do |post| %>
      <div class="posts-index">
        <div class="posts-title">
          <h3>
            <%# author id: <%= post.author_id %>
            <%= link_to post.title, user_post_path(post.author_id, post.id) %> 
          </h3>
        </div>
        <div class="posts-comment">
          <h4>
            <% if post.comments.empty? %> 
              No comments yet
            <% else %>
              <ul>
                <% post.comments.each do |comment| %>
              </ul>
              <li>
                <%= comment.author.name %>:
                <%= comment.text %>
              </li>
                <% end %>
            <% end %>
          </h4>
        </div>
      </div>
    <% end %>
    </div>

  </div>
  <div class= 'users-buttons'>
    <button>
      <%= link_to 'Back', user_path(@posts.first.author) %>
      <i class="fa-sharp fa-light fa-left"></i>
    </button>
  </div>
</div>